<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.porto.controller.PortoController">
   <top>
      <Label text="Lab9_Articoli e Autori" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Label text="Autori:" />
                  <ComboBox fx:id="boxAutore1" />
                  <ComboBox fx:id="boxAutore2" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnCoautori" mnemonicParsing="false" onAction="#doCoautori" text="Visualizza coautori" />
                  <Button fx:id="btnCluster" mnemonicParsing="false" onAction="#doCluster" text="Visualizza cluster" />
                  <Button fx:id="btnArticoli" mnemonicParsing="false" onAction="#doArticoli" text="Visualizza articoli" />
               </children>
            </HBox>
            <TextArea fx:id="txtResult" />
         </children>
      </VBox>
   </center>
</BorderPane>


